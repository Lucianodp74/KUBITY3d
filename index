                </div>
                <div class="control-group">
                    <div class="control-label">
                        <span><i class="fas fa-palette"></i> Sfondo</span>
                    </div>
                    <input type="color" id="backgroundColor" class="color-input" value="#2d3748">
                </div>
                <div class="control-group">
                    <div class="control-label">
                        <span><i class="fas fa-eye"></i> Ambiente</span>
                        <span class="control-value" id="ambientValue">0.6</span>
                    </div>
                    <input type="range" id="ambientIntensity" class="control-input" min="0" max="2" step="0.1" value="0.6">
                </div>
            </div>
            
            <div class="section">
                <div class="section-title">
                    <i class="fas fa-chart-bar"></i>
                    Statistiche Modello
                </div>
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-value" id="vertexCount">2847</div>
                        <div class="info-label">Vertices</div>
                    </div>
                    <div class="info-card">
                        <div class="info-value" id="faceCount">1423</div>
                        <div class="info-label">Faces</div>
                    </div>
                    <div class="info-card">
                        <div class="info-value" id="materialCount">5</div>
                        <div class="info-label">Materiali</div>
                    </div>
                    <div class="info-card">
                        <div class="info-value" id="fileSizeInfo">Demo</div>
                        <div class="info-label">Dimensione</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="viewer-container">
            <div id="viewer"></div>
            
            <div class="welcome-screen" id="welcomeScreen">
                <div class="welcome-icon">
                    <i class="fas fa-cube"></i>
                </div>
                <div class="welcome-title">3DViewer Pro</div>
                <div class="welcome-subtitle">Carica un modello 3D per iniziare l'esperienza</div>
            </div>
            
            <div class="viewer-hud" id="viewerHUD" style="display: none;">
                <div class="hud-title">
                    <i class="fas fa-gamepad"></i>
                    Controlli
                </div>
                <div class="hud-controls">
                    <strong>Mouse:</strong><br>
                    ‚Ä¢ Click + Trascina: Ruota modello<br>
                    ‚Ä¢ Scroll: Zoom in/out<br>
                    ‚Ä¢ Click destro + Trascina: Sposta<br><br>
                    <strong>Touch:</strong><br>
                    ‚Ä¢ Swipe: Ruota<br>
                    ‚Ä¢ Pinch: Zoom<br><br>
                    <strong>Tasti:</strong><br>
                    ‚Ä¢ <strong>Spazio</strong>: Play/Pausa animazione<br>
                    ‚Ä¢ <strong>R</strong>: Reset camera<br>
                    ‚Ä¢ <strong>F</strong>: Centra modello<br>
                    ‚Ä¢ <strong>W</strong>: Wireframe<br>
                    ‚Ä¢ <strong>S</strong>: Screenshot<br>
                    ‚Ä¢ <strong>T</strong>: Statistiche
                </div>
            </div>
            
            <div class="floating-controls" id="floatingControls" style="display: none;">
                <button class="floating-btn" onclick="resetCamera()" title="Reset Vista">
                    <i class="fas fa-home"></i>
                </button>
                <button class="floating-btn" onclick="toggleWireframe()" title="Wireframe">
                    <i class="fas fa-project-diagram"></i>
                </button>
                <button class="floating-btn" onclick="captureScreenshot()" title="Screenshot">
                    <i class="fas fa-camera"></i>
                </button>
                <button class="floating-btn" onclick="toggleStats()" title="Statistiche">
                    <i class="fas fa-chart-line"></i>
                </button>
            </div>
            
            <div class="stats-overlay" id="statsOverlay" style="display: none;">
                <div class="performance-monitor">
                    <div class="perf-item">
                        <div class="perf-value" id="fpsCounter">60</div>
                        <div class="perf-label">FPS</div>
                    </div>
                    <div class="perf-item">
                        <div class="perf-value" id="drawCalls">1</div>
                        <div class="perf-label">Calls</div>
                    </div>
                    <div class="perf-item">
                        <div class="perf-value" id="triangles">0</div>
                        <div class="perf-label">Tris</div>
                    </div>
                </div>
            </div>
            
            <div class="loading-screen" id="loadingScreen" style="display: none;">
                <div class="loading-spinner"></div>
                <div class="loading-text" id="loadingText">Caricamento modello 3D...</div>
                <div class="loading-progress">
                    <div class="loading-bar"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Variabili globali
        let scene, camera, renderer, model, mixer;
        let animationId, clock;
        let isAnimating = false;
        let rotationSpeed = 0.005;
        let cameraSpeed = 1.0;
        let isWireframe = false;
        let showStats = false;
        let frameCount = 0;
        let lastTime = performance.now();
        
        // Controlli camera
        let targetRotationX = 0, targetRotationY = 0;
        let currentRotationX = 0, currentRotationY = 0;
        
        // Stats per performance
        let stats = {
            fps: 60,
            drawCalls: 0,
            triangles: 0
        };

        // Inizializzazione
        function init() {
            const container = document.getElementById('viewer');
            
            // Clock per animazioni
            clock = new THREE.Clock();
            
            // Scena
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x2d3748);
            
            // Camera
            camera = new THREE.PerspectiveCamera(75, container.clientWidth / container.clientHeight, 0.1, 1000);
            camera.position.set(8, 6, 8);
            camera.lookAt(0, 0, 0);
            
            // Renderer
            renderer = new THREE.WebGLRenderer({ 
                antialias: true, 
                alpha: true,
                powerPreference: "high-performance",
                preserveDrawingBuffer: true
            });
            renderer.setSize(container.clientWidth, container.clientHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            renderer.shadowMap.enabled = true;
            renderer.shadowMap.type = THREE.PCFSoftShadowMap;
            renderer.outputEncoding = THREE.sRGBEncoding;
            renderer.toneMapping = THREE.ACESFilmicToneMapping;
            renderer.toneMappingExposure = 1;
            container.appendChild(renderer.domElement);
            
            // Controlli
            setupControls();
            
            // Illuminazione
            setupLighting();
            
            // Modello demo
            createDemoModel();
            
            // Event listeners
            setupEventListeners();
            
            // Avvia loop di rendering
            animate();
            
            // Nascondi schermata di benvenuto dopo 2 secondi
            setTimeout(() => {
                document.getElementById('welcomeScreen').style.display = 'none';
                document.getElementById('viewerHUD').style.display = 'block';
                document.getElementById('floatingControls').style.display = 'flex';
            }, 2000);
        }
        
        function setupControls() {
            let isMouseDown = false;
            let mouseX = 0, mouseY = 0;
            let isPanning = false;
            
            const container = renderer.domElement;
            
            // Mouse events
            container.addEventListener('mousedown', (event) => {
                event.preventDefault();
                isMouseDown = true;
                isPanning = event.button === 2;
                mouseX = event.clientX;
                mouseY = event.clientY;
                container.style.cursor = isPanning ? 'move' : 'grabbing';
            });
            
            container.addEventListener('mousemove', (event) => {
                if (!isMouseDown) return;
                
                const deltaX = event.clientX - mouseX;
                const deltaY = event.clientY - mouseY;
                
                if (isPanning) {
                    const panSpeed = 0.01;
                    const panVector = new THREE.Vector3(-deltaX * panSpeed, deltaY * panSpeed, 0);
                    panVector.applyQuaternion(camera.quaternion);
                    camera.position.add(panVector);
                } else {
                    targetRotationY += deltaX * 0.01 * cameraSpeed;
                    targetRotationX += deltaY * 0.01 * cameraSpeed;
                    targetRotationX = Math.max(-Math.PI/2, Math.min(Math.PI/2, targetRotationX));
                }
                
                mouseX = event.clientX;
                mouseY = event.clientY;
            });
            
            container.addEventListener('mouseup', () => {
                isMouseDown = false;
                isPanning = false;
                container.style.cursor = 'grab';
            });
            
            container.addEventListener('wheel', (event) => {
                event.preventDefault();
                const scale = event.deltaY > 0 ? 1.1 : 0.9;
                const newDistance = camera.position.length() * scale;
                
                if (newDistance > 1 && newDistance < 100) {
                    camera.position.multiplyScalar(scale);
                    updateZoomValue();
                }
            });
            
            // Touch controls
            let touchStartX = 0, touchStartY = 0;
            let touchDistance = 0;
            let isTouching = false;
            
            container.addEventListener('touchstart', (event) => {
                event.preventDefault();
                
                if (event.touches.length === 1) {
                    isTouching = true;
                    touchStartX = event.touches[0].clientX;
                    touchStartY = event.touches[0].clientY;
                } else if (event.touches.length === 2) {
                    const dx = event.touches[0].clientX - event.touches[1].clientX;
                    const dy = event.touches[0].clientY - event.touches[1].clientY;
                    touchDistance = Math.sqrt(dx * dx + dy * dy);
                }
            });
            
            container.addEventListener('touchmove', (event) => {
                event.preventDefault();
                
                if (event.touches.length === 1 && isTouching) {
                    const deltaX = event.touches[0].clientX - touchStartX;
                    const deltaY = event.touches[0].clientY - touchStartY;
                    
                    targetRotationY += deltaX * 0.01;
                    targetRotationX += deltaY * 0.01;
                    targetRotationX = Math.max(-Math.PI/2, Math.min(Math.PI/2, targetRotationX));
                    
                    touchStartX = event.touches[0].clientX;
                    touchStartY = event.touches[0].clientY;
                } else if (event.touches.length === 2) {
                    const dx = event.touches[0].clientX - event.touches[1].clientX;
                    const dy = event.touches[0].clientY - event.touches[1].clientY;
                    const newDistance = Math.sqrt(dx * dx + dy * dy);
                    
                    const scale = newDistance / touchDistance;
                    const cameraDistance = camera.position.length() / scale;
                    
                    if (cameraDistance > 1 && cameraDistance < 100) {
                        camera.position.multiplyScalar(1 / scale);
                        updateZoomValue();
                    }
                    
                    touchDistance = newDistance;
                }
            });
            
            container.addEventListener('touchend', () => {
                isTouching = false;
            });
            
            container.addEventListener('contextmenu', (e) => e.preventDefault());
            
            function updateCameraRotation() {
                currentRotationX += (targetRotationX - currentRotationX) * 0.1;
                currentRotationY += (targetRotationY - currentRotationY) * 0.1;
                
                const radius = camera.position.length();
                camera.position.x = radius * Math.sin(currentRotationY) * Math.cos(currentRotationX);
                camera.position.y = radius * Math.sin(currentRotationX);
                camera.position.z = radius * Math.cos(currentRotationY) * Math.cos(currentRotationX);
                camera.lookAt(0, 0, 0);
                
                requestAnimationFrame(updateCameraRotation);
            }
            updateCameraRotation();
        }
        
        function setupLighting() {
            const ambientLight = new THREE.AmbientLight(0x404040, 0.6);
            scene.add(ambientLight);
            
            const mainLight = new THREE.DirectionalLight(0xffffff, 1);
            mainLight.position.set(10, 15, 5);
            mainLight.castShadow = true;
            mainLight.shadow.mapSize.width = 2048;
            mainLight.shadow.mapSize.height = 2048;
            scene.add(mainLight);
            
            const fillLight = new THREE.DirectionalLight(0x87ceeb, 0.3);
            fillLight.position.set(-10, 10, -5);
            scene.add(fillLight);
            
            const pointLight1 = new THREE.PointLight(0xff6b6b, 0.8, 20);
            pointLight1.position.set(5, 3, 5);
            scene.add(pointLight1);
            
            const pointLight2 = new THREE.PointLight(0x4ecdc4, 0.6, 15);
            pointLight2.position.set(-5, 2, -3);
            scene.add(pointLight2);
        }
        
        function createDemoModel() {
            const group = new THREE.Group();
            
            const materials = [
                new THREE.MeshStandardMaterial({ color: 0x667eea, metalness: 0.3, roughness: 0.4 }),
                new THREE.MeshStandardMaterial({ color: 0xff6b6b, metalness: 0.7, roughness: 0.2 }),
                new THREE.MeshStandardMaterial({ color: 0x4ecdc4, metalness: 0.1, roughness: 0.8 }),
                new THREE.MeshStandardMaterial({ color: 0xf9ca24, metalness: 0.8, roughness: 0.1 }),
                new THREE.MeshStandardMaterial({ color: 0xf0932b, metalness: 0.5, roughness: 0.5 })
            ];
            
            const centralGeometry = new THREE.OctahedronGeometry(2, 1);
            const centralMesh = new THREE.Mesh(centralGeometry, materials[0]);
            centralMesh.castShadow = true;
            centralMesh.receiveShadow = true;
            group.add(centralMesh);
            
            for (let ring = 0; ring < 3; ring++) {
                const ringGroup = new THREE.Group();
                const ringRadius = 4 + ring * 2;
                const sphereCount = 6 + ring * 2;
                
                for (let i = 0; i < sphereCount; i++) {
                    const sphereGeometry = new THREE.SphereGeometry(0.3 + ring * 0.1, 8, 8);
                    const sphere = new THREE.Mesh(sphereGeometry, materials[i % materials.length]);
                    
                    const angle = (i / sphereCount) * Math.PI * 2;
                    sphere.position.x = Math.cos(angle) * ringRadius;
                    sphere.position.z = Math.sin(angle) * ringRadius;
                    sphere.position.y = Math.sin(angle * 3) * (1 + ring * 0.5);
                    
                    sphere.castShadow = true;
                    sphere.receiveShadow = true;
                    ringGroup.add(sphere);
                }
                
                ringGroup.rotation.y = ring * 0.5;
                group.add(ringGroup);
            }
            
            const planeGeometry = new THREE.RingGeometry(1, 12, 32);
            const planeMaterial = new THREE.MeshStandardMaterial({ 
                color: 0x333333, 
                transparent: true, 
                opacity: 0.6,
                metalness: 0.8,
                roughness: 0.2
            });
            const plane = new THREE.Mesh(planeGeometry, planeMaterial);
            plane.rotation.x = -Math.PI / 2;
            plane.position.y = -3;
            plane.receiveShadow = true;
            group.add(plane);
            
            model = group;
            scene.add(model);
            
            updateModelInfo(2847, 1423, 5, 'Demo');
        }
        
        function setupEventListeners() {
            const rotationSlider = document.getElementById('rotationSpeed');
            const rotationValue = document.getElementById('rotationValue');
            rotationSlider.addEventListener('input', (e) => {
                rotationSpeed = parseFloat(e.target.value);
                rotationValue.textContent = rotationSpeed.toFixed(3);
            });
            
            const zoomSlider = document.getElementById('zoomControl');
            const zoomValue = document.getElementById('zoomValue');
            zoomSlider.addEventListener('input', (e) => {
                const scale = parseFloat(e.target.value);
                const baseDistance = 10;
                camera.position.normalize().multiplyScalar(baseDistance / scale);
                zoomValue.textContent = scale.toFixed(1) + 'x';
            });
            
            const speedSlider = document.getElementById('cameraSpeed');
            const speedValue = document.getElementById('speedValue');
            speedSlider.addEventListener('input', (e) => {
                cameraSpeed = parseFloat(e.target.value);
                speedValue.textContent = cameraSpeed.toFixed(1) + 'x';
            });
            
            const lightSlider = document.getElementById('lightIntensity');
            const lightValue = document.getElementById('lightValue');
            lightSlider.addEventListener('input', (e) => {
                const intensity = parseFloat(e.target.value);
                scene.traverse((child) => {
                    if (child instanceof THREE.DirectionalLight || 
                        child instanceof THREE.PointLight) {
                        if (child !== scene.children.find(c => c instanceof THREE.AmbientLight)) {
                            child.intensity = intensity;
                        }
                    }
                });
                lightValue.textContent = intensity.toFixed(1);
            });
            
            const ambientSlider = document.getElementById('ambientIntensity');
            const ambientValue = document.getElementById('ambientValue');
            ambientSlider.addEventListener('input', (e) => {
                const intensity = parseFloat(e.target.value);
                scene.traverse((child) => {
                    if (child instanceof THREE.AmbientLight) {
                        child.intensity = intensity;
                    }
                });
                ambientValue.textContent = intensity.toFixed(1);
            });
            
            document.getElementById('backgroundColor').addEventListener('input', (e) => {
                const color = new THREE.Color(e.target.value);
                scene.background = color;
            });
            
            const fileInput = document.getElementById('fileInput');
            const uploadZone = document.getElementById('uploadZone');
            
            fileInput.addEventListener('change', handleFileUpload);
            
            // Drag & drop eventi
            uploadZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadZone.classList.add('dragover');
            });
            
            uploadZone.addEventListener('dragleave', (e) => {
                e.preventDefault();
                uploadZone.classList.remove('dragover');
            });
            
            uploadZone.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadZone.classList.remove('dragover');
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileUpload({ target: { files: files } });
                }
            });
            
            window.addEventListener('resize', onWindowResize);
            document.addEventListener('keydown', handleKeyboard);
        }
        
        function handleKeyboard(event) {
            switch(event.code) {
                case 'Space':
                    event.preventDefault();
                    toggleAnimation();
                    break;
                case 'KeyR':
                    resetCamera();
                    break;
                case 'KeyF':
                    fitToScreen();
                    break;
                case 'KeyW':
                    toggleWireframe();
                    break;
                case 'KeyS':
                    captureScreenshot();
                    break;
                case 'KeyT':
                    toggleStats();
                    break;
            }
        }
        
        function handleFileUpload(event) {
            const files = event.target.files || event.dataTransfer?.files;
            if (!files || files.length === 0) return;
            
            const file = files[0];
            const fileName = file.name.toLowerCase();
            const fileExtension = fileName.split('.').pop();
            
            // Mostra informazioni file
            showFileInfo(file);
            
            // Controlla formato supportato
            if (!['obj', 'gltf', 'glb', 'dae'].includes(fileExtension)) {
                showNotification(`Formato ${fileExtension.toUpperCase()} non supportato. Usa OBJ, GLTF, GLB o DAE.`, 'error');
                return;
            }
            
            showLoadingScreen(`Caricamento ${file.name}...`);
            
            // Rimuovi modello esistente
            if (model) {
                scene.remove(model);
                model = null;
            }
            
            // Carica il modello basato sull'estensione
            switch(fileExtension) {
                case 'obj':
                    loadOBJModel(file);
                    break;
                case 'gltf':
                case 'glb':
                    loadGLTFModel(file);
                    break;
                case 'dae':
                    loadDAEModel(file);
                    break;
            }
        }
        
        function loadOBJModel(file) {
            showNotification('Il supporto completo per file OBJ sar√† disponibile presto. Per ora usa solo il modello demo.', 'info');
            hideLoadingScreen();
        }
        
        function loadGLTFModel(file) {
            showNotification('Il supporto completo per file GLTF/GLB sar√† disponibile presto. Per ora usa solo il modello demo.', 'info');
            hideLoadingScreen();
        }
        
        function loadDAEModel(file) {
            showNotification('Il supporto completo per file DAE sar√† disponibile presto. Per ora usa solo il modello demo.', 'info');
            hideLoadingScreen();
        }
        
        function showFileInfo(file) {
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const fileType = document.getElementById('fileType');
            const fileFormat = document.getElementById('fileFormat');
            
            const extension = file.name.toLowerCase().split('.').pop();
            
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileType.textContent = file.type || 'application/octet-stream';
            fileFormat.textContent = extension.toUpperCase();
            
            fileInfo.classList.add('show');
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
        }
        
        function showLoadingScreen(message) {
            const loadingScreen = document.getElementById('loadingScreen');
            const loadingText = document.getElementById('loadingText');
            loadingText.textContent = message;
            loadingScreen.style.display = 'flex';
        }
        
        function hideLoadingScreen() {
            document.getElementById('loadingScreen').style.display = 'none';
        }
        
        function updateZoomValue() {
            const distance = camera.position.length();
            const zoomLevel = 10 / distance;
            document.getElementById('zoomValue').textContent = zoomLevel.toFixed(1) + 'x';
            document.getElementById('zoomControl').value = zoomLevel;
        }
        
        function resetCamera() {
            camera.position.set(8, 6, 8);
            camera.lookAt(0, 0, 0);
            targetRotationX = 0;
            targetRotationY = 0;
            updateZoomValue();
            showNotification('Vista camera ripristinata', 'success');
        }
        
        function toggleAnimation() {
            isAnimating = !isAnimating;
            const animIcon = document.getElementById('animIcon');
            const animText = document.getElementById('animText');
            
            if (isAnimating) {
                animIcon.className = 'fas fa-pause';
                animText.textContent = 'Pausa';
            } else {
                animIcon.className = 'fas fa-play';
                animText.textContent = 'Anima';
            }
            
            showNotification(`Rotazione automatica ${isAnimating ? 'attivata' : 'disattivata'}`, 'info');
        }
        
        function fitToScreen() {
            if (!model) return;
            
            const box = new THREE.Box3().setFromObject(model);
            const size = box.getSize(new THREE.Vector3());
            const center = box.getCenter(new THREE.Vector3());
            
            const maxDim = Math.max(size.x, size.y, size.z);
            const fov = camera.fov * (Math.PI / 180);
            const distance = Math.abs(maxDim / Math.sin(fov / 2)) * 1.5;
            
            camera.position.copy(center);
            camera.position.z += distance;
            camera.lookAt(center);
            
            updateZoomValue();
            showNotification('Modello centrato nella vista', 'success');
        }
        
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    showNotification('Impossibile attivare la modalit√† fullscreen', 'error');
                });
            } else {
                document.exitFullscreen();
            }
        }
        
        function toggleWireframe() {
            isWireframe = !isWireframe;
            
            if (model) {
                model.traverse(function(child) {
                    if (child.isMesh && child.material) {
                        if (Array.isArray(child.material)) {
                            child.material.forEach(mat => {
                                if (mat.wireframe !== undefined) {
                                    mat.wireframe = isWireframe;
                                }
                            });
                        } else {
                            if (child.material.wireframe !== undefined) {
                                child.material.wireframe = isWireframe;
                            }
                        }
                    }
                });
                
                showNotification(`Modalit√† wireframe ${isWireframe ? 'attivata' : 'disattivata'}`, 'info');
            }
        }
        
        function captureScreenshot() {
            try {
                const canvas = renderer.domElement;
                const link = document.createElement('a');
                link.download = `screenshot-3dviewer-${Date.now()}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
                
                showNotification('Screenshot salvato!', 'success');
            } catch (error) {
                console.error('Errore screenshot:', error);
                showNotification('Errore nel salvataggio dello screenshot', 'error');
            }
        }
        
        function toggleStats() {
            showStats = !showStats;
            const statsOverlay = document.getElementById('statsOverlay');
            statsOverlay.style.display = showStats ? 'block' : 'none';
            showNotification(`Statistiche performance ${showStats ? 'mostrate' : 'nascoste'}`, 'info');
        }
        
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }
        
        function updateModelInfo(vertices, faces, materials, size) {
            document.getElementById('vertexCount').textContent = vertices.toLocaleString();
            document.getElementById('faceCount').textContent = faces.toLocaleString();
            document.getElementById('materialCount').textContent = materials;
            document.getElementById('fileSizeInfo').textContent = size;
        }
        
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                <span>${message}</span>
                <button onclick="this.parentElement.remove()">√ó</button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);
        }
        
        function onWindowResize() {
            const container = document.getElementById('viewer');
            camera.aspect = container.clientWidth / container.clientHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(container.clientWidth, container.clientHeight);
            
            const mobileBtn = document.getElementById('mobileMenuBtn');
            if (window.innerWidth <= 768) {
                mobileBtn.classList.add('show');
            } else {
                mobileBtn.classList.remove('show');
                document.getElementById('sidebar').classList.remove('open');
            }
        }
        
        function animate() {
            animationId = requestAnimationFrame(animate);
            
            const deltaTime = clock.getDelta();
            
            if (isAnimating && model) {
                model.rotation.y += rotationSpeed;
            }
            
            frameCount++;
            const currentTime = performance.now();
            if (currentTime - lastTime >= 1000) {
                stats.fps = Math.round((frameCount * 1000) / (currentTime - lastTime));
                stats.drawCalls = renderer.info.render.calls;
                stats.triangles = renderer.info.render.triangles;
                
                if (showStats) {
                    document.getElementById('fpsCounter').textContent = stats.fps;
                    document.getElementById('drawCalls').textContent = stats.drawCalls;
                    document.getElementById('triangles').textContent = stats.triangles.toLocaleString();
                }
                
                frameCount = 0;
                lastTime = currentTime;
            }
            
            renderer.render(scene, camera);
        }
        
        // Avvia l'applicazione
        window.addEventListener('DOMContentLoaded', init);
        window.addEventListener('resize', onWindowResize);
    </script>
</body>
</html>
